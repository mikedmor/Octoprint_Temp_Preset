<!-- ko allowBindings: true -->
<form id="settings_plugin_temp_preset_form" class="form-horizontal">
    <h3>{{ _('Temperature Preset Profiles') }}</h3>
    <div class="row-fluid">
        <div class="span3 text-center"><h4>{{ _('Name') }}</h4></div>
        <div class="span4 text-center"><h4>{{ _('ToolTemp') }}</h4></div>
        <div class="span4 text-center"><h4>{{ _('BedTemp') }}</h4></div>
    </div>
    <div data-bind="foreach: settings.settings.plugins.temppreset.temppreset_profiles">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span2" style="margin-left">
                <input type="text" class="span12 text-right" data-bind="value: name">
            </div>
            <div class="input-append span2">
                <input type="number" class="span12 text-right" data-bind="value: tool_temp">
            </div>

            <div class="input-append span2">
                <input type="number" class="span12 text-right" data-bind="value: bed_temp">
            </div>

            <div class="span1" >
                <button title="Remove Profile" class="btn btn-danger" data-bind="click: $parent.removeMultiCamProfile, enable: $index()!==0, attr: { 'title': $index()!==0 ? 'Remove Webcam' : 'Default Webcam cannot be removed!' }"><i class="fa fa-trash-o"></i></button>
            </div>
        </div>


    </div>
    <div class="row-fluid">
        <div class="offset10 span2">
            <button title="Add Profile" class="btn btn-primary" data-bind="click: addTempPresetProfile"><i class="fa fa-plus"></i></button>
        </div>
    </div>
</form>
<!-- /ko -->
