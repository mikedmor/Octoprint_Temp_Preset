<!-- ko allowBindings: true -->
<form id="settings_plugin_temp_preset_form" class="form-horizontal">
    <h3>{{ _('Temperature Preset Profiles') }}</h3>
    <div class="row-fluid">
        <div class="span3 text-center"><h4>{{ _('Name') }}</h4></div>
        <div class="span4 text-center"><h4>{{ _('Tool Temp') }}</h4></div>
        <div class="span4 text-center"><h4>{{ _('Bed Temp') }}</h4></div>
    </div>
    <div data-bind="foreach: settings.settings.plugins.temp_preset.temppreset_profiles">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3" style="margin-left">
                <input type="text" class="span12 text-right" data-bind="value: name">
            </div>
            <div class="input-append span4">
                <input type="number" class="span12 text-right" data-bind="value: tool_temp">
            </div>

            <div class="input-append span4">
                <input type="number" class="span12 text-right" data-bind="value: bed_temp">
            </div>

            <div class="span1" >
                <button title="Remove Profile" class="btn btn-danger" data-bind="click: $parent.removeTempPresetProfile, attr: { 'title': 'Remove Profile' }"><i class="fa fa-trash-o"></i></button>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset11 span1">
            <button title="Add Profile" class="btn btn-primary" data-bind="click: addTempPresetProfile"><i class="fa fa-plus"></i></button>
        </div>
    </div>
</form>
<!-- /ko -->
